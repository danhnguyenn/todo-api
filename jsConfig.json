{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"paths": {
			"$common/*": ["./src/common/*"],
			"$controllers/*": ["./src/controllers/*"],
			"$middlewares/*": ["./src/middlewares/*"],
			"$models/*": ["./src/models/*"],
			"$routes/*": ["./src/routes/*"],
			"$utils/*": ["./src/utils/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*"]
}
